{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"strict": true,
		"typeRoots": ["./node_modules/@types", "./src/@types", "jest"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "__mocks__"]
}
